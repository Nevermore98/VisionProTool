<Application x:Class="WPF_VisionPro_Demo.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WPF_VisionPro_Demo"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             Startup="Application_Startup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Light" />
                <ui:ControlsDictionary />

                <ResourceDictionary Source="Resources/Styles/ColorsLocal.xaml" />
                <ResourceDictionary Source="Resources/Icons.xaml" />

                <ResourceDictionary Source="Resources/Styles/DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>



            <!-- 字体 -->
            <FontFamily x:Key="Dingding">
                /Resources/DingTalk-JinBuTi.ttf#钉钉进步体
            </FontFamily>

            <FontFamily x:Key="SegoeFluentIcons">
                pack://application:,,,/;component/Fonts/#Segoe Fluent Icons
            </FontFamily>


            <!-- 自定义 WPF-UI 样式 -->
            <Style BasedOn="{StaticResource DefaultUiButtonStyle}" TargetType="ui:Button">
                <Setter Property="Cursor" Value="Hand" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
